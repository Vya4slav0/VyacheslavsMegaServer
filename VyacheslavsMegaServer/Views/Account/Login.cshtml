@model LoginViewModel

<div class="block_standart first_slide login">
    <div class="container">
        <div class="intro_container">
            <h1 class="title">Вход</h1><br>
            <form asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" class="center_element form_small" method="post">
                <div asp-validation-summary="All" class="form_error mc_form_font_standart"></div>
                <div class="form_part_left_aligment">
                    <label class="element_label mc_form_font_standart" asp-for="UserName"></label><br>
                    <input class="mc_text_input_space mc_form_font_standart wide_element labeled_element" asp-for="UserName" /><br>
                </div>
                <div class="form_part_left_aligment form_next_block">
                    <label class="element_label mc_form_font_standart" asp-for="Password"></label><br>
                    <input class="mc_text_input_space mc_form_font_standart wide_element labeled_element" asp-for="Password" /><br>
                </div>
                <div class="form_part_center_aligment form_next_block">
                    <label class="element_label mc_form_font_standart mc_checkbox_container" asp-for="RememberMe">
                        @Html.DisplayNameFor(m => m.RememberMe)
                    <input type="checkbox" asp-for="RememberMe" /><br>
                    <span class="mc_checkbox"></span>
                    </label>
                </div>
                <div class="form_part_left_aligment form_next_block">
                    <button class="mc_button  wide_element" type="submit">
                        <span class="mc_button_title mc_form_font_standart">Войти</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>